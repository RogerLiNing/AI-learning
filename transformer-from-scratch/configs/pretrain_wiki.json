{
    "tokenizer_dir": "data/hf_tokenizer",
    "train_data_path": "data/raw/wikipedia-cn-20230720-filtered.json",
    "val_data_path": "data/processed/wikipedia-cn-20230720-filtered.json",
    "source_field": null,
    "completion_field": null,
    "text_field": "completion",
    
    "// 模型结构参数": "",
    "d_model": 768,
    "n_layers": 8,
    "n_heads": 12,
    "d_ff": 3072,
    "dropout": 0.1,
    "tie_weights": true,
    
    "// 序列和批次参数": "",
    "max_length": 512,
    "vocab_size": 21132,
    "batch_size": 32,
    
    "// 数据加载优化": "",
    "num_workers": 20,
    "pin_memory": true,
    "prefetch_factor": 8,
    
    "// 训练优化参数": "",
    "lr": 3e-4,
    "weight_decay": 0.01,
    "warmup_ratio": 0.05,
    "lr_scheduler": "cosine",
    "gradient_accumulation_steps": 4,
    "gradient_checkpointing": true,
    
    "// 训练流程参数": "",
    "epochs": 5,
    "save_every": 5000,
    "eval_every": 1000,
    "use_amp": true,
    "mixed_precision": "fp16",
    "cuda_deterministic": false,
    "benchmark_cudnn": true,
    
    "// 内存优化": "",
    "memory_efficient_attention": true,
    "checkpoint_activation": true,
    "logging_steps": 100,
    "save_steps": 1000,
    "eval_steps": 500,
    "save_dir": "saved_models/wiki_pretrain"
}
