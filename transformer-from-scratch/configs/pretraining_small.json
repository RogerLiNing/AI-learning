{
  "data_path": "data/raw/test_corpus.txt",
  "tokenizer_path": "data/tokenizer/tokenizer_small.json",
  "tokenizer_type": "basic",
  "vocab_size": 1000,
  "save_dir": "saved_models/pretrain",
  "log_dir": "logs/pretrain",
  
